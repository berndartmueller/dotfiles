# NPM run dev, source nvm, and if given, jump to project
npm-dev() {
  if [[ -z "$1" ]]; then
    nvm use && npm run dev
  else
    j ${1} && nvm use && npm run dev
  fi
}

# Use Ctrl-Z to switch back to Vim
fancy-ctrl-z () {
  if [[ $#BUFFER -eq 0 ]]; then
    BUFFER="fg"
    zle accept-line
  else
    zle push-input
    zle clear-screen
  fi
}
zle -N fancy-ctrl-z
bindkey '^Z' fancy-ctrl-z

